<div class="row text-center" style="margin-top: 75px;">

    <div class="col-md-6">
        <p>
            <i style="font-size: 18px" id="random_lyric_text">"<%= data.lyrics %>"</i> -
            <span id="random_lyric_artist">
                <%=data.artist %>
            </span>
        </p>
        <button id="random_btn" style="margin-right: 10px;" class="btn btn-secondary">Random</button>
        <input type="checkbox" id="explicit_checkbox">
        <label for="explicit_checkbox">Explicit</label>
    </div>

    <div class="col-md-6" style="padding-top: 17.5px;">
        <p>View all artists stored in our database</p>
        <a href="/artists" class="text-center" title="Explore all artists">
            
            <div class="btn btn-warning" style="max-width: 200px; font-size: 20px; color: black"><svg
                    xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="black" class="bi bi-person-circle"
                    viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg> Explore Artists</div>
        </a>
    </div>


</div>
<script>
    let explicitLyrics = false;

    async function getRandomLyric(isExplicit) {
        try {
            const res = await fetch("/api/rl?explicit=" + isExplicit);
            const data = await res.json();
            console.log(data)

            document.getElementById("random_lyric_text").innerText = '"' + data.lyrics + '"';
            document.getElementById("random_lyric_artist").innerText = data.artist;

        } catch (e) {
            alert(e);
        }
    }
    document.getElementById("random_btn").addEventListener("click", async () => {
        await getRandomLyric(explicitLyrics);
    });
    document.getElementById("explicit_checkbox").addEventListener("change", (e) => {
        explicitLyrics = e.target.checked;
    })
</script>
<div class="row" style="background-color: white; padding: 25px;">
    <img src="/icons/explicit.svg" alt="explicit icon" style="margin-right: 5px; width: 75px;" /> <h2 style="display: contents;">Most Explicit Lyrics</h2>
    <p class="text-muted"><%= data[0].artistName %> has the most explicit language used compared to any other artist.</p>
    <% for( let index=0; index < data.length; index++ ) { %>
        <div class="col-xl-2 col-4">
            <a href="/artists/<%= data[index]._id %>" style="text-decoration: none; color: black">
                <img src="/imgs/<%= data[index]._id %>.png" alt="<%= data[index].artistName  %>" class="img-fluid"
                    style="width: 100px;" />
                <div>
                    <%= data[index].artistName %>
                        <code style="display: block; font-weight: bold;"><%= data[index].totalCussWordLyrics%> explicit lyrics</code>
                </div>

            </a>
        </div>
        <% } %>
        <p style="margin-bottom: 0px; margin-top: 25px; font-weight: bold;">Throughout the entire database:</p>
        <ul >
        <% for( let index=0; index < occurences.length; index++ ) { %>
            <li>
                <p style="margin-bottom: 0px;">
                    The word <%= occurences[index].word %> appears <%= occurences[index].occurences %> times
                </p>
            </li>
            <% } %>
    </ul>
</div>